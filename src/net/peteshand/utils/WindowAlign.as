	public class WindowAlign extends Object 
	{
		/**
		 * The WindowAlign class provides constant values to use for the <codeph class="+ topic/ph pr-d/codeph ">Window.align</codeph> property.
		 */
		/**
		 * Specifies that the Window is aligned at the bottom.
		 */
		public static const BOTTOM : String = "B";

		/**
		 * Specifies that the Window is aligned in the bottom-left corner.
		 */
		public static const BOTTOM_LEFT : String = "BL";

		/**
		 * Specifies that the Window is aligned in the bottom-right corner.
		 */
		public static const BOTTOM_RIGHT : String = "BR";

		/**
		 * Specifies that the Window is aligned on the left.
		 */
		public static const LEFT : String = "L";

		/**
		 * Specifies that the Window is aligned to the right.
		 */
		public static const RIGHT : String = "R";

		/**
		 * Specifies that the Window is aligned at the top.
		 */
		public static const TOP : String = "T";

		/**
		 * Specifies that the Window is aligned in the top-left corner.
		 */
		public static const TOP_LEFT : String = "TL";

		/**
		 * Specifies that the Window is aligned in the top-right corner.
		 */
		public static const TOP_RIGHT : String = "TR";
		
		/**
		 * Specifies that the Window is aligned in the middle of the screen.
		 */
		public static const MIDDLE : String = "M";

		public function WindowAlign ();
		
	}

}